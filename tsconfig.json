{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES2023",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src",  
    "moduleResolution": "node",
    "paths": {
      "ixfx/*":["./node_modules/ixfx/dist/*"]
    }
  },
  "include": ["./src/**.*"],
  "browserslist": "defaults"
}